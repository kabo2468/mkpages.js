{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "pretty": true,
    "newLine": "lf"
  },
  "exclude": [
    "node_modules",
    "lib",
    "ex/**/*",
  ]
}